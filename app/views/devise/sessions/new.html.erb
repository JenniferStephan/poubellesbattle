<div class="admin-box">
  <div class="new-user-form">
    <h2>Connection</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, placeholder: "email",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, placeholder: "mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "bouton-valid" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    <div class="user-form-line"></div>
  </div>
</div>
