<div class="admin-box">
  <div class="stat-flex-container">
    <div class="stat-graph">
      <div class="stat-graph-title">
        <h5>Evolution des installations de site de compostage</h5>
      </div>
      <div class="stat-graph-chart">
        <%= line_chart @composteurs_stats, @options %>
      </div>
    </div>
    <div class="stat-graph">
      <div class="stat-graph-title">
        <h5>Evolution des inscriptions</h5>
      </div>
      <div class="stat-graph-chart">
        <%= line_chart @users_stats, @options %>
      </div>
    </div>
    <div class="stat-graph">
      <div class="stat-graph-title">
        <h5>Les Ã©changes autour des sites de compostages</h5>
      </div>
      <div class="stat-graph-chart doughnut">
        <%= doughnut_chart @notifications_stats, @options_doughnut %>
      </div>
    </div>
    <% @stats.each do |stat| %>
      <div class="stat-card <%= stat[0] %>">
        <div class="stat-title">
          <%= stat[1] %>
        </div>
        <div class="stat-number"><%= stat[0].to_s.include?("percent") ? "+ #{stat[2]} %" : "#{stat[2]}" %></div>
      </div>
    <% end %>
  </div>
</div>
