<%= simple_form_for [:admin, @composteur] do |f| %>
  <%= f.input :name, placeholder: 'Nom du composteur' %>
  <%= f.input :address, placeholder: 'adresse'  %>
  <%= f.input :category, label: 'Quel type de composteur ?', as: :radio_buttons,
                collection: ["composteur bas d'immeuble", "composteur de quartier"]  %>
  <%= f.input :public, label: "Est-il accessible à tout le monde ?", as: :radio_buttons,
                collection: [[true, "oui"], [false, "non"]],
                label_method: :last,
                value_method: :first %>
  <%= f.input :status, label: "Statut", placeholder: 'Son statut', as: :radio_buttons, collection: ["installation prévue", "ouvert", "fermé", "archivé"] %>
  <%= f.input :volume, placeholder: 'Volume' %>
  <%= f.input :residence_name, placeholder: 'Nom de la résidence' %>
  <%= f.input :commentaire, as: :text, placeholder: 'Commentaire' %>
  <%= f.input :installation_date, placeholder: "date d'installation", as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :photo, placeholder: "Photo du composteur", as: :file %>
  <%= f.input :date_retournement, placeholder: "date de retournement prévue le :", as: :string, required: false, input_html: {class: "datepicker"} %>

  <%= f.submit "Valider le composteur", class: "button"  %>
<% end %>
