<div class="new-edit-don">
  <h2>Créer mon annonce pour un don vert</h2>
  <%= simple_form_for(@don) do |f| %>
    <div class="type-don">
      <h5>Infos sur mon don</h5>
      <%= f.input :title, placeholder: 'Titre de mon annonce' %>
      <%= f.input :type_matiere_orga, as: :radio_buttons, collection: ["compost", "structurant", "outils", "graines", "plantes", "autre"], label: 'Type de matière', input_html: {class: "wrap-radio"} %>
      <%= f.input :description, as: :text, placeholder: 'Courte description', input_html: { maxlength: 56 } %>
      <%= f.input :volume_litres, placeholder: "Quantité", hint: "en litres s'il s'agit de compost ou de structurant" %>
      <%= f.input :donneur_address, placeholder: 'Localisation du don' %>
      <%= f.input :photo, label: "Avez-vous une photo du don ?", as: :file %>
    </div>
    <div class="contact-don">
      <h5>Mes contacts</h5>
      <%= f.input :donneur_name, placeholder: 'Prénom' %>
      <p>Type de donateur</p>
      <%= f.input :donateur_type, collection: ["site de compostage", "entreprise du paysage", "association", "établissement scolaire", "particulier", "autre"], label: 'Type de donateur' %>
      <%= f.input :donneur_email, placeholder: 'Email' %>
      <%= f.input :donneur_tel, placeholder: 'Téléphone' %>
      <%= f.input :date_fin_dispo, as: :string, input_html: { class: "datepicker" }, placeholder: 'Date limite' %>
      <%= f.submit "Poster mon annonce !", class: "new-don-btn" %>
    </div>
  <% end %>
</div>
